{
  "manifest_version": 3,
  "name": "Company Red Flag Detector",
  "version": "1.0",
  "description": "Simulate deep research on companies using OpenAI GPT-4 and download structured JSON.",
  "permissions": ["storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
